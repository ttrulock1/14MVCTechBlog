<div class="text-center p-1">
    <h2>Create New Post</h2>
    <form id="new-blog-post-form">
        <div class="form-group m-1">
            <label for="title-input">Title</label>
            <input type="text" class="form-control" id="title-input" placeholder="Blog Post Title">
        </div>
        <div class="form-group m-1">
            <label for="content-input">Content</label>
            <textarea class="form-control" id="content-input" placeholder="Blog Content" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-primary m-1">Create</button>
    </form>
</div>
<script src="/js/createNewPost.js"></script>